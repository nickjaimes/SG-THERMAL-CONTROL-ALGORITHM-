class ThermalDigitalTwin:
    def __init__(self, zones):
        self.zones = zones  # actual temp & parameters
        self.future_scenarios = []

    def simulate(self, workload_future, ambient_future):
        simulated = []
        for zone in self.zones:
            temp_pred = zone.temp + (
                zone.sensitivity * workload_future[zone.id] +
                ambient_future * 0.4
            )
            simulated.append({
                "zone": zone.id,
                "predicted_temp": temp_pred,
                "risk_estimation": 1 if temp_pred > zone.max_safe else 0
            })
        return simulated

# usage
future_cases = twin.simulate(workload_forecast, ambient_weather_projection)

